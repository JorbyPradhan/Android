<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true"
    android:orientation="vertical"
    android:background="@color/colorBlack"
    tools:context=".presentation.ui.detail.DetailFragment">

    <com.google.android.material.appbar.AppBarLayout
        android:id="@+id/appBarLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:theme="@style/ThemeOverlay.AppCompat.Dark.ActionBar">

        <com.google.android.material.appbar.CollapsingToolbarLayout
            android:layout_width="match_parent"
            android:layout_height="300dp"
            app:contentScrim="@color/colorRed"
            app:layout_scrollFlags="scroll|exitUntilCollapsed"
            app:titleEnabled="false">

            <ImageView
                android:id="@+id/img_detail"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:scaleType="fitXY"
                app:layout_collapseMode="parallax"
                android:src="@mipmap/ironman" />
            <TextView
                android:id="@+id/detail_rating"
                style="@style/TextAppearance.AppCompat.Widget.ActionBar.Subtitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="8.8"
                android:background="@color/colorDark"
                android:layout_gravity="bottom|end"
                android:paddingEnd="4dp"
                android:drawablePadding="6dp"
                android:layout_marginBottom="6dp"
                app:drawableStartCompat="@drawable/ic_baseline_star_24"
                tools:ignore="RtlSymmetry" />
            <androidx.appcompat.widget.Toolbar
                android:id="@+id/toolbar"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                app:layout_collapseMode="pin"
                app:popupTheme="@style/ThemeOverlay.AppCompat.Light"
                 />
        </com.google.android.material.appbar.CollapsingToolbarLayout>
    </com.google.android.material.appbar.AppBarLayout>
    <androidx.core.widget.NestedScrollView
        android:id="@+id/scrollView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/colorBlack"
        android:paddingTop="32dp"
        android:clipToPadding="false"
        app:layout_behavior="@string/appbar_scrolling_view_behavior">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <TextView
                android:id="@+id/detail_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/bungee"
                android:text="THE FORCE AWAKENS"
                android:paddingStart="10dp"
                android:textColor="#ffffff"
                android:textSize="22sp"
                android:textStyle="bold"
                app:layout_anchor="@id/appBarLayout"
                app:layout_anchorGravity="bottom"
                app:pressedTranslationZ="12dp"
                style="@style/TextAppearance.AppCompat.Widget.ActionBar.Title"/>
            <LinearLayout
                android:layout_marginTop="8dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:paddingLeft="10dp">
                <TextView
                    android:id="@+id/detail_release"
                    android:textColor="@color/colorWhite"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="2015"
                    style="@style/TextAppearance.AppCompat.Small"/>
                <TextView
                    android:textColor="@color/colorWhite"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text=", "
                    style="@style/TextAppearance.AppCompat.Small"/>
                <TextView
                    android:id="@+id/detail_runtime"
                    android:textColor="@color/colorWhite"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text=" 2h 18m"
                    style="@style/TextAppearance.AppCompat.Small"/>
                <TextView
                    android:textColor="@color/colorWhite"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text=", "
                    style="@style/TextAppearance.AppCompat.Small"/>
                <TextView
                    android:id="@+id/detail_genre"
                    android:textColor="@color/colorWhite"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    style="@style/TextAppearance.AppCompat.Small"
                    />
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:weightSum="2"
                android:layout_marginTop="8dp"
                android:layout_marginStart="10dp"
                android:orientation="horizontal">
                <TextView
                    android:id="@+id/detail_status"
                    android:gravity="start"
                    android:layout_marginEnd="10dp"
                    android:textColor="@color/colorWhite"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Released"
                    style="@style/TextAppearance.AppCompat.Subhead"
                    />
                <TextView
                    android:id="@+id/detail_adult"
                    android:gravity="end"
                    android:visibility="gone"
                    android:layout_marginEnd="10dp"
                    android:textColor="@color/colorRed"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Adult Only"
                    style="@style/TextAppearance.AppCompat.Subhead"
                    />
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:layout_marginTop="10dp"
               >
                <TextView
                    android:id="@+id/detail_tagLine"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Overview"
                    android:paddingStart="6dp"
                    android:layout_marginBottom="8dp"
                    android:textColor="@color/colorWhite"
                    style="@style/TextAppearance.AppCompat.Widget.ActionBar.Title"
                    />
                <View
                    android:layout_width="match_parent"
                    android:layout_height="2dp"
                    android:background="@color/colorRed"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Overview"
                   android:layout_marginTop="8dp"
                    android:layout_marginStart="8dp"
                    android:textColor="@color/colorWhite"
                    style="@style/TextAppearance.AppCompat.Title"
                    />
                <com.github.rpradal.lettrine.LettrineTextView
                    android:id="@+id/detail_overView"
                    android:padding="10dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:lettrine_textColor="@android:color/white"
                    app:lettrine_lettrineSize="3"
                    app:lettrine_textSize="14sp" />
                <TextView
                    android:id="@+id/detail_cast"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/cast"
                    android:layout_marginTop="8dp"
                    android:layout_marginStart="8dp"
                    android:textColor="@color/colorWhite"
                    style="@style/TextAppearance.AppCompat.Title"
                    android:visibility="gone"
                    />
                <TextView
                    android:id="@+id/detail_cast_list"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/cast"
                    android:ellipsize="end"
                    android:inputType="none"
                    android:maxLines="2"
                    android:layout_marginTop="6dp"
                    android:layout_marginStart="8dp"
                    android:textColor="@color/colorWhite"
                    style="@style/TextAppearance.AppCompat.Subhead"
                    android:visibility="gone"
                    />
                <TextView
                    android:id="@+id/detail_director"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/director"
                    android:layout_marginTop="8dp"
                    android:layout_marginStart="8dp"
                    android:textColor="@color/colorWhite"
                    style="@style/TextAppearance.AppCompat.Title"
                    android:visibility="gone"
                    />
                <TextView
                    android:id="@+id/detail_director_list"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/director"
                    android:ellipsize="end"
                    android:inputType="none"
                    android:maxLines="2"
                    android:layout_marginTop="6dp"
                    android:layout_marginStart="8dp"
                    android:textColor="@color/colorWhite"
                    style="@style/TextAppearance.AppCompat.Subhead"
                    android:visibility="gone"
                    />
                <TextView
                    android:id="@+id/detail_producer"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/producer"
                    android:layout_marginTop="8dp"
                    android:layout_marginStart="8dp"
                    android:textColor="@color/colorWhite"
                    style="@style/TextAppearance.AppCompat.Title"
                    android:visibility="gone"
                    />
                <TextView
                    android:id="@+id/detail_producer_list"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/producer"
                    android:ellipsize="end"
                    android:inputType="none"
                    android:maxLines="2"
                    android:layout_marginTop="6dp"
                    android:layout_marginStart="8dp"
                    android:textColor="@color/colorWhite"
                    style="@style/TextAppearance.AppCompat.Subhead"
                    android:visibility="gone"
                    />
                <TextView
                    android:id="@+id/detail_content"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/content"
                    android:layout_marginTop="8dp"
                    android:layout_marginStart="8dp"
                    android:textColor="@color/colorWhite"
                    style="@style/TextAppearance.AppCompat.Title"
                    android:visibility="gone"
                    />
                <TextView
                    android:id="@+id/detail_content_list"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="6dp"
                    android:layout_marginStart="8dp"
                    android:textColor="@color/colorWhite"
                    style="@style/TextAppearance.AppCompat.Subhead"
                    android:visibility="gone"
                    />
                <TextView
                    android:id="@+id/detail_author"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/producer"
                    android:textStyle="italic"
                    android:fontFamily="sans-serif-smallcaps"
                    android:layout_marginTop="8dp"
                    android:layout_marginEnd="10dp"
                    android:layout_gravity="end"
                    android:textColor="@color/colorWhite"
                    style="@style/TextAppearance.AppCompat.Small"
                    android:visibility="gone"
                    />
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_margin="10dp">
                    <com.github.rpradal.lettrine.LettrineTextView
                        android:id="@+id/detail_trailer"
                        android:padding="10dp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        app:lettrine_textColor="@android:color/white"
                        app:lettrine_lettrineSize="2"
                        app:lettrine_text="Trailer"
                        app:lettrine_textSize="18sp" />
                    <ImageView
                        android:id="@+id/poster_trailer"
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_horizontal"
                        android:adjustViewBounds="true"
                        android:layout_marginStart="10dp"
                        android:layout_marginTop="20dp"
                        android:layout_marginEnd="10dp"
                        android:maxHeight="150dip"
                        android:minHeight="150dip"
                        android:resizeMode="horizontal|vertical"
                        android:scaleType="fitXY"
                        />
                </LinearLayout>
            </LinearLayout>

        </LinearLayout>
    </androidx.core.widget.NestedScrollView>
    <LinearLayout
        android:id="@+id/detail_bottomSheet"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@android:color/background_light"
        android:orientation="vertical"
        app:behavior_hideable="false"
        app:behavior_peekHeight="64dp"
        app:layout_behavior="@string/bottom_sheet_behavior">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="64dp"
            android:background="@color/colorDark"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tabOverview"
                style="@style/Widget.MajesticReader.Tab"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_weight="1"
                android:background="@drawable/text_link_selector_bg"
                android:text="@string/overview"
                app:drawableTopCompat="@drawable/ic_screenplay" />

            <TextView
                android:id="@+id/tabCast"
                style="@style/Widget.MajesticReader.Tab"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_weight="1"
                android:background="@drawable/text_link_selector_bg"
                android:text="@string/credits"
                app:drawableTopCompat="@drawable/ic_credit" />

            <TextView
                android:id="@+id/tabReview"
                style="@style/Widget.MajesticReader.Tab"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_weight="1"
                android:background="@drawable/text_link_selector_bg"
                android:text="@string/reviews"
                app:drawableTopCompat="@drawable/ic_rating" />

        </LinearLayout>
    </LinearLayout>
    <iammert.com.view.scalinglib.ScalingLayout
        android:id="@+id/detail_scalingLayout"
        android:layout_width="wrap_content"
        android:layout_height="48dp"
        app:radiusFactor="1"
        android:clickable="true"
        android:layout_gravity="center_horizontal"
        android:stateListAnimator="@animator/sl_state_animator"
        app:layout_behavior=".util.MyBehaviour"
        >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/colorRed"
            android:paddingLeft="8dp"
            android:paddingRight="8dp"
            android:gravity="center"
            android:orientation="horizontal">

            <RelativeLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center">

                <ImageView
                    android:id="@+id/imageViewWatchNow"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:src="@drawable/ic_cinema" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_toEndOf="@+id/imageViewWatchNow"
                    android:gravity="center"
                    android:text="Watch Now"
                    android:layout_marginStart="6dp"
                    android:textColor="#ffffff"
                    android:singleLine="true"
                    android:textSize="17sp" />

            </RelativeLayout>

            <RelativeLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center">

                <ImageView
                    android:id="@+id/imageViewWatchLater"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:src="@drawable/ic_baseline_arrow_downward_24" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_toEndOf="@+id/imageViewWatchLater"
                    android:gravity="center"
                    android:singleLine="true"
                    android:layout_marginStart="6dp"
                    android:text="Download"
                    android:textColor="#ffffff"
                    android:textSize="17sp" />

            </RelativeLayout>
        </LinearLayout>
    </iammert.com.view.scalinglib.ScalingLayout>
</androidx.coordinatorlayout.widget.CoordinatorLayout>