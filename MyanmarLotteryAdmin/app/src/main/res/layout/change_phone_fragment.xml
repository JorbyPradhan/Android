<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg"
    android:gravity="center"
    android:padding="16dp"
    android:backgroundTint="@color/lightGrey"
    android:backgroundTintMode="multiply"
    tools:context=".ui.phone.ChangePhoneFragment">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center">
        <com.google.android.material.card.MaterialCardView
            android:id="@+id/card_layout"
            android:layout_width="match_parent"
            android:layout_height="400dp"
            android:layout_margin="5dp"
            android:padding="10dp"
            app:cardCornerRadius="5dp"
            app:cardElevation="5dp"
            android:background="@drawable/bordervetical"
            app:cardBackgroundColor="@color/lightGrey"
            >
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:layout_margin="5dp"
                android:layout_gravity="center"
                android:background="@drawable/bg"
                >

                <com.google.android.material.textfield.TextInputLayout
                    android:id="@+id/layout_phone"
                    android:layout_width="match_parent"
                    android:layout_height="90dp"
                    android:layout_marginTop="25dp"
                    android:paddingTop="10dp"
                    android:layout_marginStart="10dp"
                    android:layout_marginEnd="10dp"
                    app:boxBackgroundColor="#FEFEFE"
                    app:boxBackgroundMode="outline"
                    android:hint="Enter old number"
                    app:boxCornerRadiusBottomEnd="16dp"
                    app:boxCornerRadiusBottomStart="16dp"
                    app:counterEnabled="true"
                    android:textColorHint="@android:color/darker_gray"
                    app:counterMaxLength="11">

                    <EditText
                        android:id="@+id/chg_old_phone"
                        android:layout_width="match_parent"
                        android:layout_height="60dp"
                        android:drawableStart="@drawable/ic_password"
                        android:drawablePadding="10dp"
                        android:textColor="#019b77"
                        android:layout_marginTop="10dp"
                        android:inputType="phone"
                        android:maxLength="11"
                        android:maxLines="1"
                        android:paddingStart="10dp"
                        android:textSize="18sp"
                        tools:ignore="RtlSymmetry" />
                </com.google.android.material.textfield.TextInputLayout>

                <com.google.android.material.textfield.TextInputLayout
                    android:id="@+id/layoutNewPhone"
                    android:layout_width="match_parent"
                    android:layout_height="90dp"
                    android:layout_marginStart="10dp"
                    android:layout_marginEnd="10dp"
                    android:layout_marginTop="5dp"
                    app:boxBackgroundColor="#FEFEFE"
                    app:boxBackgroundMode="outline"
                    app:boxCornerRadiusBottomEnd="16dp"
                    app:boxCornerRadiusBottomStart="16dp"
                    app:counterEnabled="true"
                    app:counterMaxLength="11"
                    android:hint="Enter new number"
                    android:textColorHint="@android:color/darker_gray"
                    app:helperText="Minimum length is 6 characters"
                    app:helperTextTextColor="@android:color/darker_gray"
                    app:hintTextAppearance="@style/HintText">
                    <EditText
                        android:id="@+id/chg_new_phone"
                        android:layout_width="match_parent"
                        android:layout_height="60dp"
                        android:layout_marginTop="10dp"
                        android:drawableStart="@drawable/ic_password"
                        android:drawablePadding="10dp"
                        android:textColor="#019b77"
                        android:inputType="phone"
                        android:maxLength="11"
                        android:maxLines="1"
                        android:paddingStart="10dp"
                        android:textSize="18sp"
                        tools:ignore="RtlSymmetry" />
                </com.google.android.material.textfield.TextInputLayout>
                <com.google.android.material.textfield.TextInputLayout
                    android:id="@+id/layoutConfirmPhone"
                    style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                    android:layout_width="match_parent"
                    android:layout_height="90dp"
                    android:layout_marginTop="5dp"
                    android:layout_marginStart="10dp"
                    android:layout_marginEnd="10dp"
                    app:boxBackgroundColor="#FEFEFE"
                    app:boxBackgroundMode="outline"
                    app:boxCornerRadiusBottomEnd="16dp"
                    app:boxCornerRadiusBottomStart="16dp"
                    app:counterEnabled="true"
                    app:counterMaxLength="11"
                    android:hint="Enter confirm number"
                    android:textColorHint="@android:color/darker_gray"
                    app:helperText="Minimum length is 6 characters"
                    app:helperTextTextColor="@android:color/darker_gray"
                    app:hintTextAppearance="@style/HintText">

                    <EditText
                        android:id="@+id/chg_confirm_pass"
                        android:layout_width="match_parent"
                        android:layout_height="60dp"
                        android:drawableStart="@drawable/ic_password"
                        android:drawablePadding="10dp"
                        android:textColor="#019b77"
                        android:inputType="phone"
                        android:layout_marginTop="10dp"
                        android:maxLength="11"
                        android:maxLines="1"
                        android:paddingStart="10dp"
                        android:textSize="18sp"
                        tools:ignore="RtlSymmetry" />
                </com.google.android.material.textfield.TextInputLayout>

                <Button
                    android:id="@+id/btn_change_phone"
                    android:layout_width="match_parent"
                    android:layout_height="60dp"
                    android:layout_margin="10dp"
                    android:text="Change"
                    android:textAllCaps="false"
                    android:textColor="@android:color/holo_red_light"
                    android:textSize="20sp" />
            </LinearLayout>
        </com.google.android.material.card.MaterialCardView>
    </RelativeLayout>
    <com.google.android.material.card.MaterialCardView
        android:id="@+id/card_layout_phone"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="-16dp"
        android:padding="15dp"
        app:cardCornerRadius="5dp"
        app:cardElevation="5dp"
        android:background="@drawable/bordervetical"
        app:cardBackgroundColor="@color/lightGrey"
        >
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="8dp"
            android:layout_margin="3dp"
            android:background="@color/colorWhite"
            android:text="Change Phone Number"
            android:textAlignment="center"
            android:textColor="#019b77"
            android:textSize="18sp"
            android:textStyle="bold" />
    </com.google.android.material.card.MaterialCardView>

</RelativeLayout>