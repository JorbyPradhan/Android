<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.order.OrderListFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/rec_order"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="5dp"
            android:clipToPadding="false"
            app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
            tools:itemCount="5"
            tools:listitem="@layout/item_post_list" />

        <TextView
            android:id="@+id/txt_moreOrder"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:layout_marginStart="20dp"
            android:layout_marginTop="10dp"
            android:layout_marginEnd="10dp"
            android:layout_marginBottom="20dp"
            android:background="@drawable/edit_circle_bg"
            android:gravity="center_vertical|center_horizontal"
            android:paddingStart="30dp"
            android:paddingEnd="30sp"
            android:text="More results"
            android:textColor="@color/colorPink"
            android:textSize="20sp"
            app:drawableStartCompat="@drawable/ic_baseline_keyboard_arrow_down_24"
            tools:ignore="RtlSymmetry" />
    </LinearLayout>
</ScrollView>